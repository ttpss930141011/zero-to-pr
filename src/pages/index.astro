---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={t('site.title')} description={t('site.description')} />
		<style>
			.hero {
				text-align: center;
				padding: 4rem 1rem;
			}
			.hero h1 {
				font-size: 3.5rem;
				margin-bottom: 0.5rem;
			}
			.hero .subtitle {
				font-size: 1.5rem;
				color: rgb(var(--gray));
				margin-bottom: 2rem;
			}
			.hero .content {
				max-width: 600px;
				margin: 0 auto 2rem;
			}
			.hero .content p {
				font-size: 1.2rem;
				margin-bottom: 1rem;
			}
			.cta-button {
				display: inline-block;
				padding: 1rem 2rem;
				background: var(--accent);
				color: var(--bg);
				text-decoration: none;
				border-radius: 8px;
				font-size: 1.2rem;
				font-weight: 700;
				transition: transform 0.2s, box-shadow 0.2s;
				border: 1px solid rgb(var(--gray-light));
			}
			.cta-button:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
				color: var(--bg);
			}
			@media (max-width: 720px) {
				.hero h1 {
					font-size: 2.5rem;
				}
				.hero .subtitle {
					font-size: 1.2rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>{t('home.title')}</h1>
				<p class="subtitle">{t('home.subtitle')}</p>
				<div class="content">
					<p><strong>{t('home.intro')}</strong></p>
					<p>{t('home.description')}</p>
					<p>{t('home.cta.text')}</p>
				</div>
				<a href="/blog/" class="cta-button">{t('home.cta.button')}</a>
			</section>
		</main>
		<Footer />
	</body>
</html>

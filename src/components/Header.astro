---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { languages } from '../i18n/ui';
import HeaderLink from './HeaderLink.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get current path without language prefix for building switch URLs
let basePath = Astro.url.pathname;
if (basePath.startsWith('/en/')) {
	basePath = basePath.slice(3);
} else if (basePath === '/en') {
	basePath = '/';
}

// Build language URLs
const zhUrl = basePath;
const enUrl = '/en' + (basePath === '/' ? '' : basePath);
---

<header>
	<nav>
		<h2><a href={lang === 'zh' ? '/' : '/en/'}>{t('site.title')}</a></h2>
		<div class="internal-links">
			<HeaderLink href={lang === 'zh' ? '/' : '/en/'}>{t('nav.home')}</HeaderLink>
			<HeaderLink href={lang === 'zh' ? '/blog' : '/en/blog'}>{t('nav.blog')}</HeaderLink>
			<HeaderLink href={lang === 'zh' ? '/about' : '/en/about'}>{t('nav.about')}</HeaderLink>
		</div>
		<div class="right-links">
			<div class="lang-dropdown">
				<button class="lang-btn" aria-label="Select language">üåê</button>
				<div class="lang-menu">
					<a href={zhUrl} class:list={[{ active: lang === 'zh' }]}>‰∏≠Êñá</a>
					<a href={enUrl} class:list={[{ active: lang === 'en' }]}>English</a>
				</div>
			</div>
			<a href="https://github.com/ttpss930141011" target="_blank" class="social-link">
				<span class="sr-only">GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="28" height="28">
					<path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--bg-secondary);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--black));
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.right-links {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.lang-dropdown {
		position: relative;
	}
	.lang-btn {
		background: var(--bg);
		border: 1px solid rgb(var(--gray-light));
		border-radius: 4px;
		padding: 0.5em 0.75em;
		font-size: 1.1rem;
		cursor: pointer;
		transition: background 0.2s;
	}
	.lang-btn:hover {
		background: rgb(var(--gray-light));
	}
	.lang-menu {
		display: none;
		position: absolute;
		top: 100%;
		right: 0;
		margin-top: 0.5rem;
		background: var(--bg-secondary);
		border: 1px solid rgb(var(--gray-light));
		border-radius: 4px;
		min-width: 100px;
		z-index: 100;
	}
	.lang-dropdown:hover .lang-menu,
	.lang-dropdown:focus-within .lang-menu {
		display: block;
	}
	.lang-menu a {
		display: block;
		padding: 0.5em 1em !important;
		border-bottom: none !important;
		color: rgb(var(--gray));
	}
	.lang-menu a:hover {
		background: rgb(var(--gray-light));
		color: rgb(var(--black));
	}
	.lang-menu a.active {
		color: rgb(var(--black));
		font-weight: bold;
	}
	.social-link {
		display: flex;
		align-items: center;
	}
	@media (max-width: 720px) {
		.internal-links {
			display: none;
		}
	}
</style>
